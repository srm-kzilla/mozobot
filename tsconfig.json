{
  "compilerOptions": {
    "target": "es2020",
    "module": "ES2020",
    "rootDir": "./src",
    "outDir": "./build",
    "moduleResolution": "node",
    "removeComments": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "skipLibCheck": true
  },
  "exclude": ["node_modules", "build"]
}
