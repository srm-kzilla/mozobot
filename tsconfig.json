{
  "compilerOptions": {
    "target": "es2018",
    "rootDir": "./src",
    "outDir": "./build",
    "moduleResolution": "node",
    "removeComments": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "skipLibCheck": true
  },
  "exclude": [
    "node_modules",
    "build"
  ]
}
